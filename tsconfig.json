{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    // 若有未使用的参数则抛错。
    "noUnusedParameters": true,
    // 若有未使用的局部变量则抛错
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "paths": {
      "@@*": ["src/*"],
      "@fe6/water-use": ["node_modules/@fe6/water-use/src/*"],
    }
  },
  "include": ["node_modules/@fe6/water-use/src/**/*.ts", "node_modules/@fe6/water-use/src/**/*.tsx", "node_modules/@fe6/water-use/src/**/*.vue", "constant/*.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
